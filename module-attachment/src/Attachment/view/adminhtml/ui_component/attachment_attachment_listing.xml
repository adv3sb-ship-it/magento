<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">attachment_attachment_listing.attachment_attachment_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/add"/>
                <class>primary</class>
                <label translate="true">Add New</label>
            </button>
        </buttons>
        <spinner>columns</spinner>
        <deps>
            <dep>attachment_attachment_listing.attachment_attachment_listing_data_source</dep>
        </deps>
    </settings>

    <dataSource name="attachment_attachment_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">attachment_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Mirasvit\Attachment\Ui\Attachment\Listing\DataProvider" name="attachment_attachment_listing_data_source">
            <settings>
                <requestFieldName>attachment_id</requestFieldName>
                <primaryFieldName>attachment_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="columns" class="Magento\Ui\Component\Listing\Columns">
        <column name="attachment_id">
            <settings>
                <label translate="true">ID</label>
                <filter>textRange</filter>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="attachment_position" sortOrder="10">
            <settings>
                <label translate="true">Sort Order</label>
                <filter>text</filter>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="is_active" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <label translate="true">Is Active</label>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <dataType>select</dataType>
            </settings>
        </column>

        <column name="source_name">
            <settings>
                <label translate="true">Name</label>
                <filter>text</filter>
            </settings>
        </column>

        <column name="icon" component="Magento_Ui/js/grid/columns/thumbnail" class="Mirasvit\Attachment\Ui\Attachment\Listing\Column\Thumbnail">
            <settings>
                <label translate="true">Icon</label>
                <hasPreview>true</hasPreview>
                <sortable>false</sortable>
            </settings>
        </column>

        <column name="type" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <label translate="true">Type</label>
                <options class="Mirasvit\Attachment\Ui\Attachment\Source\TypeSource"/>
                <filter>select</filter>
                <dataType>select</dataType>
            </settings>
        </column>

        <column name="label">
            <settings>
                <label translate="true">Label</label>
                <filter>text</filter>
            </settings>
        </column>

        <column name="downloads">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Downloads</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                </item>
            </argument>
        </column>

        <actionsColumn name="actions" class="Mirasvit\Attachment\Ui\Attachment\Listing\Column\Actions">
            <settings>
                <indexField>attachment_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
