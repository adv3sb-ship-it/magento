<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">attachment_icon_listing.attachment_icon_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/add"/>
                <class>primary</class>
                <label translate="true">Add New</label>
            </button>
        </buttons>
        <spinner>columns</spinner>
        <deps>
            <dep>attachment_icon_listing.attachment_icon_listing_data_source</dep>
        </deps>
    </settings>

    <dataSource name="attachment_icon_listing_data_source"  component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">icon_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Mirasvit\Attachment\Ui\Icon\Listing\DataProvider" name="attachment_icon_listing_data_source">
            <settings>
                <requestFieldName>icon_id</requestFieldName>
                <primaryFieldName>icon_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="columns" class="Magento\Ui\Component\Listing\Columns">
        <column name="icon_id">
            <settings>
                <label translate="true">ID</label>
                <filter>textRange</filter>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="icon" component="Magento_Ui/js/grid/columns/thumbnail" class="Mirasvit\Attachment\Ui\Icon\Listing\Column\Thumbnail">
            <settings>
                <label translate="true">Icon</label>
                <hasPreview>true</hasPreview>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="is_active" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <label translate="true">Is Active</label>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <dataType>select</dataType>
            </settings>
        </column>
        <column name="label">
            <settings>
                <label translate="true">Label</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="types">
            <settings>
                <label translate="true">Types</label>
                <filter>text</filter>
            </settings>
        </column>
        <actionsColumn name="actions" class="Mirasvit\Attachment\Ui\Icon\Listing\Column\Actions">
            <settings>
                <indexField>icon_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
