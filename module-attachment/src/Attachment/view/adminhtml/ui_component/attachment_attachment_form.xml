<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" component="Mirasvit_Attachment/js/components/attachment-form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">attachment_attachment_form.attachment_attachment_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="back" class="Mirasvit\Attachment\Ui\Attachment\Form\Control\BackButton"/>
            <button name="delete" class="Mirasvit\Attachment\Ui\Attachment\Form\Control\DeleteButton"/>
            <button name="save" class="Mirasvit\Attachment\Ui\Attachment\Form\Control\SaveButton"/>
            <button name="save_and_continue" class="Mirasvit\Attachment\Ui\Attachment\Form\Control\SaveAndContinueButton"/>
        </buttons>
        <namespace>attachment_attachment_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>attachment_attachment_form.attachment_attachment_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="attachment_attachment_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="mst_attachment/attachment/save"/>
        </settings>
        <dataProvider class="Mirasvit\Attachment\Ui\Attachment\Form\DataProvider" name="attachment_attachment_form_data_source">
            <settings>
                <requestFieldName>attachment_id</requestFieldName>
                <primaryFieldName>attachment_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <collapsible>true</collapsible>
            <opened>true</opened>
            <label translate="true">General Information</label>
        </settings>

        <field name="attachment_id" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <label/>
                <dataScope>attachment_id</dataScope>
            </settings>
        </field>

        <field name="is_active" sortOrder="20" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Is Active</label>
                <dataScope>is_active</dataScope>
                <dataType>boolean</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>

        <field name="type" sortOrder="30" formElement="select">
            <settings>
                <label translate="true">Type</label>
                <dataScope>type</dataScope>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Mirasvit\Attachment\Ui\Attachment\Source\TypeSource"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <container name="file">
            <argument name="data" xsi:type="array">
                <item name="type" xsi:type="string">group</item>
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Mirasvit_Attachment/js/components/group</item>
                    <item name="toggle" xsi:type="array">
                        <item name="selector" xsi:type="string">${$.provider}:data.type</item>
                        <item name="value" xsi:type="string">file</item>
                    </item>
                </item>
            </argument>

            <field name="attachment" sortOrder="40" formElement="fileUploader">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="uploaderConfig" xsi:type="array">
                            <item name="url" xsi:type="string">mst_attachment/attachment/upload</item>
                        </item>
                    </item>
                </argument>
                <settings>
                    <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                </settings>
            </field>
        </container>

        <container name="link">
            <argument name="data" xsi:type="array">
                <item name="type" xsi:type="string">group</item>
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Mirasvit_Attachment/js/components/group</item>
                    <item name="toggle" xsi:type="array">
                        <item name="selector" xsi:type="string">${$.provider}:data.type</item>
                        <item name="value" xsi:type="string">link</item>
                    </item>
                </item>
            </argument>
            <field name="source_name" sortOrder="70" formElement="input">
                <settings>
                    <label translate="true">Url</label>
                    <dataScope>source_name</dataScope>
                    <dataType>text</dataType>
                </settings>
            </field>
        </container>

        <field name="label" sortOrder="80" formElement="input">
            <settings>
                <label translate="true">Label</label>
                <dataScope>label</dataScope>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="attachment_position" formElement="input" sortOrder="90">
            <settings>
                <elementTmpl>ui/form/element/input</elementTmpl>
                <dataType>number</dataType>
                <dataScope>attachment_position</dataScope>
                <label translate="true">Sort Order</label>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="icon_id" sortOrder="100" formElement="select">
            <settings>
                <label translate="true">Icon</label>
                <dataScope>icon_id</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Mirasvit\Attachment\Ui\Attachment\Source\IconSource"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="customer_group_ids" sortOrder="110" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0,1,2,3</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Customer Group Ids</label>
                <dataScope>customer_group_ids</dataScope>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Customer\Model\ResourceModel\Group\Collection"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>

        <field name="store_ids">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Cms\Ui\Component\Listing\Column\Cms\Options</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
