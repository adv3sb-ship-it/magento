    <preference for="Mirasvit\Attachment\Api\Data\IconInterface" type="Mirasvit\Attachment\Model\Icon"/>
    <preference for="Mirasvit\Attachment\Api\Data\LinkInterface" type="Mirasvit\Attachment\Model\Link"/>
