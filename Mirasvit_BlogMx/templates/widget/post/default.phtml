<script>
require(['jquery'], function ($) {
    $(document).ready(function () {
        const $content = $('.bmx\\:content');
        const $toc = $('#blog-toc');
        const headings = $content.find('h2, h3');

        if (!headings.length) return;

        const tocTitle = <?= json_encode(__('Table of contents')) ?>;

        const $list = $('<ul class="toc-list"></ul>');
        $toc.append($('<div class="toc-title"><strong></strong></div>').text(tocTitle)).append($list);

        const transliterate = (function () {
            const map = {
                'а': 'a', 'б': 'b', 'в': 'v', 'г': 'h', 'ґ': 'g', 'д': 'd', 'е': 'e', 'є': 'ie',
                'ж': 'zh', 'з': 'z', 'и': 'y', 'і': 'i', 'ї': 'i', 'й': 'i', 'к': 'k', 'л': 'l',
                'м': 'm', 'н': 'n', 'о': 'o', 'п': 'p', 'р': 'r', 'с': 's', 'т': 't', 'у': 'u',
                'ф': 'f', 'х': 'kh', 'ц': 'ts', 'ч': 'ch', 'ш': 'sh', 'щ': 'shch', 'ь': '', 'ю': 'iu', 'я': 'ia',
                'э': 'e', 'ы': 'y', 'ъ': '',
                'А': 'A', 'Б': 'B', 'В': 'V', 'Г': 'H', 'Ґ': 'G', 'Д': 'D', 'Е': 'E', 'Є': 'Ye',
                'Ж': 'Zh', 'З': 'Z', 'И': 'Y', 'І': 'I', 'Ї': 'Yi', 'Й': 'Y', 'К': 'K', 'Л': 'L',
                'М': 'M', 'Н': 'N', 'О': 'O', 'П': 'P', 'Р': 'R', 'С': 'S', 'Т': 'T', 'У': 'U',
                'Ф': 'F', 'Х': 'Kh', 'Ц': 'Ts', 'Ч': 'Ch', 'Ш': 'Sh', 'Щ': 'Shch', 'Ь': '', 'Ю': 'Iu', 'Я': 'Ia'
            };
            return function (text) {
                return text.split('').map(function (char) {
                    return map[char] !== undefined ? map[char] : char;
                }).join('');
            };
        })();

        const slugify = function (text) {
            return transliterate(text.toString())
                .toLowerCase()
                .replace(/[^a-z0-9 -]/g, '')
                .replace(/\s+/g, '-')
                .replace(/-+/g, '-');
        };

        const usedIds = {};

        headings.each(function () {
            const $h = $(this);
            let slug = slugify($h.text());

            if (usedIds[slug]) {
                usedIds[slug]++;
                slug += '-' + usedIds[slug];
            } else {
                usedIds[slug] = 1;
            }

            $h.attr('id', slug);

            const $link = $('<a></a>').attr('href', '#' + slug).text($h.text());
            const $item = $('<li></li>').append($link);

            $list.append($item);
        });
    });
});
</script>